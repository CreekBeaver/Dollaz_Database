<body class="p-3 mb-2">
    <h1>Welcome to the Update Derivative Data Page</h1>
    <p>
        <ol>
            <li> Select the Radio button associated with the Field you wish to change</li>
            <li> Enter Into the Text Box the New Desired Value </li>
            <li> Enter the Derivative ID which you would like to change </li>
            <li> Click "Submit". If Changes are accepted, the Table will be Revised. </li>

        </ol>
    </p>


    <table class="table table-bordered">
    <! -- This is what establishes the Table -->
    <thead>
        <tr>
            <th>Derivative ID</th>
            <th>Model Derivative</th>
            <th>Body Style</th>
            <th>Primary Use</th>
            <th>Flight Range (Miles)</th>
            <th>Max Seating</th>
            <th>Fuel Efficiency (gallons / mile)</th>
            <th>Max Takeoff Weight (lbs)</th>
        </tr>

    <tbody>
    <!-- Now, iterate through every person in bsg_people -->
    {% for person in data %}
        <tr>
            <!-- Then iterate through every key in the current person dictionary -->
            {% for key in person.keys() %}
            <!-- Create a <td> element with the value of that key in it -->
            <td>{{person[key]}}</td>
            {% endfor %}
        </tr>
    {% endfor %}
        <tr>
            <form action="/derivative_data" method="post">
                <td> </td>

                <td><input class="form-control" type="text" name="model_derivative" value="{{ data[0]['model_derivative'] }}" ></td>
                <td><input class="form-control" type="text" name="body_style" value="{{ data[0]['body_style'] }}" ></td>
                <td><input class="form-control" type="text" name="primary_use" value="{{ data[0]['primary_use'] }}" ></td>
                <td><input class="form-control" type="text" name="flight_range" value="{{ data[0]['flight_range'] }}"></td>
                <td><input class="form-control" type="text" name="max_seating" value="{{ data[0]['max_seating'] }}" ></td>
                <td><input class="form-control" type="text" name="fuel_efficiency" value="{{ data[0]['fuel_efficiency'] }}"></td>
                <td><input class="form-control" type="text" name="max_takeoff_weight" value="{{ data[0]['max_takeoff_weight'] }}"></td>
                <td>
                    <button type="submit" name="update" value="{{ data[0]['derivative_id'] }}">Submit Updates</button>
                </td>

            </form>
        </tr>
    </table>

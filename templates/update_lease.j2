<body class="p-3 mb-2">
    <h1>Welcome to the Update Lease Page</h1>
    <p>
        <ol>
            <li>Update the information in the text Boxes</li>
            <li>When you are pleased with the data, Click "Submit"</li>
            <li>If the refresh page does not display your update, something went wrong</li>
        </ol>
    </p>


    <table class="table table-bordered">
    <! -- This is what establishes the Table -->
    <thead>
        <tr>
            <th>Lease ID</th>
            <th>Customer ID</th>
            <th>Jet ID</th>
            <th>Lease Status</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Duration</th>
            <th>Ground Staff Included</th>
            <th>Crew Included</th>
            <th>Lease Value</th>
            <th>Payment To Date</th>
            <th>Payment Remaining</th>
        </tr>

    <tbody>
    <!-- Now, iterate through every person in bsg_people -->
    {% for person in data %}
        <tr>
            <!-- Then iterate through every key in the current person dictionary -->
            {% for key in person.keys() %}
            <!-- Create a <td> element with the value of that key in it -->
            <td>{{person[key]}}</td>
            {% endfor %}
        </tr>
    {% endfor %}
        <tr>
            <form action="/lease" method="post">
                <td> </td>
                <td><input class="form-control" type="text" name="customer_id" value="{{ data[0]['customer_id'] }}" ></td>
                <td><input class="form-control" type="text" name="jet_id" value="{{ data[0]['jet_id'] }}" ></td>
                <td><input class="form-control" type="text" name="lease_status" value="{{ data[0]['lease_status'] }}" ></td>
                <td><input class="form-control" type="text" name="start_date" value="{{ data[0]['start_date'] }}"></td>
                <td><input class="form-control" type="text" name="end_date" value="{{ data[0]['end_date'] }}" ></td>
                <td><input class="form-control" type="text" name="duration" value="{{ data[0]['duration'] }}" ></td>
                <td><input class="form-control" type="text" name="ground_staff_included" value="{{ data[0]['ground_staff_included'] }}" ></td>
                <td><input class="form-control" type="text" name="crew_included" value="{{ data[0]['crew_included'] }}" ></td>
                <td><input class="form-control" type="text" name="lease_value" value="{{ data[0]['lease_value'] }}" ></td>
                <td><input class="form-control" type="text" name="payment_to_date" value="{{ data[0]['payment_to_date'] }}"></td>
                <td><input class="form-control" type="text" name="payment_remaining" value="{{ data[0]['payment_remaining'] }}" ></td>
                <td>
                    <button type="submit" name="update" value="{{ data[0]['lease_id'] }}">Submit Updates</button>
                </td>
            </form>
        </tr>
    </table>

<body class="p-3 mb-2">
    <h1>Welcome to the Update Employee Page</h1>
    <p>
        <ol>
            <li>Update the information in the text Boxes</li>
            <li>When you are pleased with the data, Click "Submit"</li>
            <li>If the refresh page does not display your update, something went wrong</li>
        </ol>
    </p>


    <table class="table table-bordered">
    <! -- This is what establishes the Table -->
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Employment Start Date</th>
            <th>Employment End Date</th>
            <th>Title</th>
            <th>Salary ($)</th>
            <th>Click to Update</th>
        </tr>

    <tbody>
    <!-- Now, iterate through every person in bsg_people -->
    {% for thing in data %}
        <tr>
            <!-- Then iterate through every key in the current person dictionary -->
            {% for key in thing.keys() %}
            <!-- Create a <td> element with the value of that key in it -->
            <td>{{thing[key]}}
            </td>
            {% endfor %}
        </tr>
    {% endfor %}
        <tr>
            <form action="/employee" method="post">
                <td> </td>
                <td><input class="form-control" type="text" name="first_name" value="{{ data[0]['first_name'] }}" ></td>
                <td><input class="form-control" type="text" name="last_name" value="{{ data[0]['last_name'] }}" ></td>
                <td><input class="form-control" type="text" name="employment_start_date" value="{{ data[0]['employment_start_date'] }}" ></td>
                <td><input class="form-control" type="text" name="employment_end_date" value="{{ data[0]['employment_end_date'] }}"></td>
                <td><input class="form-control" type="text" name="title" value="{{ data[0]['title'] }}" ></td>
                <td><input class="form-control" type="text" name="salary" value="{{ data[0]['salary'] }}"></td>
                <td>
                    <button type="submit" name="update" value="{{ data[0]['employee_id'] }}">Submit Updates</button>
                </td>

            </form>
        </tr>
    </table>
